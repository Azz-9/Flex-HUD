{
	"schemaVersion": 1,
	"id": "flex_hud",
	"version": "${version}",

	"name": "Flex HUD",
	"description": "This mod adds a fully customizable HUD system and useful utilities for Minecraft.\nWhether you're playing survival, building, or PvP, it provides all the information and quality-of-life features you need in one place.",
	"authors": [
		"Azz_9"
	],
	"contact": {
		"issues": "https://github.com/Azz-9/Flex-HUD/issues",
		"sources": "https://github.com/Azz-9/Flex-HUD"
	},

	"license": "MIT",
	"icon": "assets/flex_hud/logo.png",

	"environment": "client",
	"entrypoints": {
		"client": [
			"me.Azz_9.flex_hud.client.Flex_hudClient"
		],
		"modmenu": [
			"me.Azz_9.flex_hud.compat.ModMenuCompat"
		]
	},

	"mixins": [
		"flex_hud.mixins.json"
	],
	"depends": {
		"fabricloader": ">=${loader_version}",
		"fabric": "*",
		"fabric-key-binding-api-v1": "*",
		"minecraft": "${minecraft_version}"
	}
}
